<div class="row">
  <div class="col-sm-12">
    <h1>Sign in</h1>
    <hr/>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email -%>
        <%= f.input_field :email, as: :email, autofocus: true, class: 'form-control input-lg', placeholder: 'E-mail' %>
      </div>

      <div class="form-group">
        <%= f.label :password -%>
        <%= f.input_field :password, required: true, class: 'form-control input-lg', placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.input_field :remember_me, as: :boolean, boolean_style: :inline -%>
            <%= f.label :remember_me -%>
          </label>
        </div>
      <%- end -%>

      <div class="form-group">
        <%= f.submit t('sign_in'), class: 'btn btn-primary btn-lg form-control input-lg' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
