<hr/>
  <%= content_for(:title) do %>
  <%- end -%>
  <div style="margin-left: 10px; text-align: center">
    <h2>
      <%= @device_story.last_location_name %> (<%= @device_story.device_urn %>)
      <%- if  @device_story.last_seen %>
        <div style="font-size: 15px"> Last seen <%= time_ago_in_words(@device_story.last_seen) %> ago</div>
      <%- end %>
    </h2>
  </div>
  <hr>
  <div style="display: flex; flex-wrap: wrap; justify-content: space-around;">
    <div style="flex: 1 5 40%; width: 100%; margin-top: 25px">
      <table class="table table-hover" style="width: 100%">
        <tr>
          <td colspan="3">
            <button type="button" style="display: flex; justify-content: center; align-items: center; margin-left: auto; margin-right: auto; font-size: 15px; min-width: 164px; width: 100%"><%= link_to 'More sensor data', grafana_more_data(@device_story.device_urn), target: :_blank %></button>
          </td>
        </tr>
      </table>
    </div>
    <%- if @device_story.device_urn.include? 'note:dev' %>
      <iframe
        src="<%= grafana_iframe(@device_story.device_urn, :air_quality) %>"
        style="flex: 2 2 60%; width: 100%; height: 250px;" frameborder="0">
      </iframe>
    <%- else %>
      <iframe
        src="<%= grafana_iframe(@device_story.device_urn, :cpm) %>"
        style="flex: 2 2 60%; width: 100%; height: 250px;" frameborder="0">
      </iframe>
    <%- end %>
  </div>
  <hr>
  <div class="" style="min-height: 250px; height: calc(100vh - 325px); display: flex; flex-direction: column;">
    <%- if @device_story.device_urn.include? 'note:dev' %>
      <iframe
        src="<%= grafana_iframe(@device_story.device_urn, :air_quality_map) %>"
        style="flex-grow: 1; width: 100%; min-height: 250px; height: auto;" frameborder="0">
      </iframe>
    <%- else %>
      <iframe
        src="<%= grafana_iframe(@device_story.device_urn, :map) %>"
        style="flex-grow: 1; width: 100%; min-height: 250px; height: auto;" frameborder="0">
      </iframe>
    <%- end %>
  </div>

<div>
  <h2>Comments: <br></h2>
  <table class="table table-striped">
    <tbody>
    <%- if @device_story.device_story_comments.empty? %>
      No Comments yet.
    <%- else %>
      <%- @device_story.device_story_comments.each do |comment| %>
        <tr>
          <td>
            <b><%= link_to comment.user.name , comment.user %></b> <div style="display: inline-block; color: dimgrey; font-size: small">(<%= time_ago_in_words(comment.created_at) %> ago)</div> <br>
            <%= comment.content %>
            <%- if user_signed_in? -%>
              <%- if (comment.user_id == current_user.id) || moderator?(current_user) %>
                <div style="float:right"> <%= link_to 'Delete', device_story_device_story_comment_path(@device_story, comment), method: :delete %></div>
              <%- end %>
            <%- end %>
          </td>
        </tr>
      <%-end %>
    <%- end %>
    </tbody>
  </table>
</div>
<div class="col-md-12" style="margin-left: 5px;">
  <%- if user_signed_in? %>
    <%= form_with model: DeviceStoryComment, url: device_story_device_story_comments_path(@device_story), local: true, method: 'post' do |form| %>
      <%= form.label :content, current_user.name %>
      <%= form.text_area :content, :rows => 3, class: "form-control", style: 'width:97%;' %>
      <p><%= form.submit "Submit comment", class: "form-control btn btn-primary", style: "margin-top: 10px; width: 200px;" %></p>
    <% end %>
  <% end %>
</div>

<div class="spacer"></div>
<%= current_page_api_example :device_stories_url %>
