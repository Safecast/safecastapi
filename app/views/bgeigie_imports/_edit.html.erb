<div class="row">
  <div class="well col-xs-12"> <%= render 'static_metadata' %> </div>
  <div class="col-xs-12">
    <%= simple_form_for @bgeigie_import, html: { class: 'form-horizontal' } do |f| %>
      <%= f.input :name, input_html: {class: 'form-control'} %>
      <%= f.input :description, input_html: {class: 'form-control'} %>
      <%= f.input :credits, input_html: {class: 'form-control'} %>
      <%= f.input :cities, input_html: {class: 'form-control'} %>
      <%= f.input :comment, input_html: {class: 'form-control'} %>

      <%= f.input :height, input_html: {class: 'form-control'} %>
      <%= f.input :orientation, :collection => [
        'Facing Left',
        'Facing Right',
        'Facing Down',
        'Facing Front',
        'Facing Back',
        'Facing Up'
        ], input_html: {class: 'form-control'}%>
      <%= f.input :subtype,
                  :collection => %w(Drive Surface Cosmic None),
                  :selected => "Drive",
                  :include_blank => false,
                  input_html: {class: 'form-control'}
                  %>

      <%= f.button :wrapped, :cancel => @bgeigie_import %>
    <%- end -%>

  </div>
</div>
