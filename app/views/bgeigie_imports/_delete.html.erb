<div class="row">
  <div class="col-md-9">
    <%= link_to t('.delete_this_import'), '#delete-log', :data => {
      :toggle => 'modal'
    }, :class => 'pull-right muted' %>
  </div>
</div>

<div id="delete-log" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3><%= t('.confirm_delete') %></h3>
      </div>
      <div class="modal-body">
        <p><%= t('.about_to_delete') %></p>
      </div>
      <div class="modal-footer">
        <%= form_for @bgeigie_import,
              :method => :delete do |f| %>
          <%= link_to t('cancel'), '#delete-log', :data => {
                :toggle => 'modal'
              } %>
          <%= f.submit t('.confirm_delete'), :class => 'btn btn-danger' %>
        <%- end -%>
      </div>
    </div>
  </div>
</div>
